<% layout("/layouts/boilerplate.ejs")  %>
<body>
    <div class="row mt-4">
    <div class="col-8 offset-2">
        <br><br>
    <h3>Create a New Listing</h3>
    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input required type="text" name="listing[title]" class="form-control" placeholder="Enter a catchy title">
            <div class="valid-feedback">
                Title looks good
            </div>
            <div class="invalid-feedback">
                Title is required
            </div>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea required name="listing[description]"  class="form-control"></textarea>
            <div class="invalid-feedback">
                Description is required
            </div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Upload Listing Image</label>
            <input type="file" name="listing[image]"  class="form-control">

        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input required name="listing[price]" placeholder="1200" type="text" class="form-control">
                <div class="invalid-feedback">
                    Price is required
                </div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input required name="listing[country]" placeholder="India" type="text" class="form-control">
                <div class="invalid-feedback">
                    Country Name is required
                </div>
            </div>

        </div>
        
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input required name="listing[location]" placeholder="Jaipur , Rajasthan" type="text" class="form-control">
            <div class="invalid-feedback">
                Location is required
            </div>
        </div>
        <br><br>
        <button class="btn btn-dark add-btn mt-4">ADD</button>
        <br><br>
    </form>
    </div>
    </div>
</body>
